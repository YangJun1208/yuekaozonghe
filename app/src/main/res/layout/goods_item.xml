<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="150dp">

    <CheckBox
        android:id="@+id/shop_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/image_goods"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/shop_checkbox"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_goods"
        android:layout_marginTop="50dp"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/goods_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image_goods"
        android:layout_centerVertical="true"/>

    <com.bwei.yuekaolianxi01.iview.CustomView
        android:id="@+id/custom_jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_price"
        android:layout_toRightOf="@id/image_goods"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>